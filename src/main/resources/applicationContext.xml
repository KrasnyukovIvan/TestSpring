<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
    <bean id="classicMusic"
          class="com.krasnyukov.TestSpring.ClassicalMusic">
    </bean>
    <bean id="rockMusic"
          class="com.krasnyukov.TestSpring.RockMusic">
    </bean>

    <bean id="musicPlayer"
          class="com.krasnyukov.TestSpring.MusicPlayer"
          scope="prototype">
        <property name="music">
            <list>
                <ref bean = "classicMusic"/>
                <ref bean = "rockMusic"/>
            </list>
        </property>
        <property name="volume" value="50"></property>

    </bean>
</beans>